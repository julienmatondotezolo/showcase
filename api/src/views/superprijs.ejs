<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Showcase - Winners</title>
    <link rel="stylesheet" href="../css/master.css" type="text/css" />
    <script
      src="https://kit.fontawesome.com/2580541a59.js"
      crossorigin="anonymous"
    ></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="module" src="/js/superprijs.js"></script>
  </head>

  <body>
    <aside class="bg-blue">
      <section class="cl1">
        <img
          src="../assets/images/logo.png"
          lt="final show logo"
          class="logo"
        />
      </section>
      <nav>
        <ul class="sidenav">
          <li>
            <a href="/dashboard-docent"><i class="fas fa-th-large"></i> Dashboard</a>
          </li>
          <li class="active">
            <a href=""><i class="fas fa-trophy"></i> Superprice</a>
          </li>
          <li class="winners">
            <a href="/winners"><i class="fas fa-trophy"></i> Winners</a>
          </li>
          <li class="nominations">
            <a href="/dashboard-docent#projects"><i class="fas fa-award"></i> Nominations</a>
          </li>
          <li>
            <a href="/dashboard-docent#projects"><i class="fas fa-columns"></i> Projects</a>
          </li>
          <li>
            <a href="/dashboard-docent#voted"><i class="fas fa-poll-h"></i> My Votes</a>
          </li>
          <li>
            <a href="/dashboard-docent#favorites"><i class="far fa-heart"></i> favorites</a>
          </li>
          <li class="bg-pink">
            <a href="/logout"><i class="fas fa-sign-out-alt"></i> sign-out</a>
          </li>
        </ul>
      </nav>
    </aside>

    <main class="winners">
      <header class="cl1">
        <nav>
          <ul class="topnav">
            <li>
              <h3 class="title">Superprijs</h3>
            </li>

            <li>
              <i class="fas fa-cog fa-lg"></i>
              <i class="fas fa-bell fa-lg"></i>
              <i>
                <span class="fas fa-user-circle dark-blue fa-lg"></span>
                <p><%= username %></p>
              </i>
            </li>
          </ul>
        </nav>
      </header>

      <section class="nomination-list cl1">
      </section>

      <section class="box cl1">
        <p class="title">Nominate a project for superprice</p>
      </section>

      <div class="cl1 top-projects">
        <section class="wrap box-shadow">
          <article class="cl1">
            <h3 class="item-name">Nominated projects for superprice</h3>
            <div class="option">
              <i class="fas fa-sync-alt"></i>
              <i class="fas fa-ellipsis-v"></i>
            </div>
          </article>

          <div id="nominations" class="cl1 table">
            <div class="table-head-tr">
              <article class="table-td">
                <p class="bold">Project image</p>
              </article>
              <article class="table-td">
                <p class="bold">Project name</p>
              </article>
              <article class="table-td">
                <p class="bold">Student</p>
              </article>
              <article class="table-td">
                <p class="bold">Total votes</p>
              </article>
              <article class="table-td"></article>
            </div>
            <div class="cl1 table-content"></div>
          </div>
        </section>
      </div>

    </main>
  </body>
</html>
